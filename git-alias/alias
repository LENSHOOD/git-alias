# g for git, so every other command that is not contained in alias can also be simplified
alias g='git'

alias ga='git add'
alias ga.='git add .'

alias gb='git branch'

# gcm and gca is very useful
alias gc='git commit'
alias gcm='git commit -m'
alias gca='git commit --amend'
alias ga.cm='git add . && git commit -m'

alias gck='git checkout'

# add branch name after this alias
alias gfo='git fetch origin'
alias gplo='git pull origin'
alias gpso='git push origin'

alias gl='git log'

alias gm='git merge'

# always run gpr before push local commits
alias gp='git pull'
alias gpr='git pull -r'

alias gs='git status'

alias gd='git diff'

alias gr='git reset'

alias gcl='git clone'

alias gst='git stash'
alias gstp='git stash pop'

# rebase pull all sub-directories
alias gpr-all='find . -type d -depth 1 -exec git --git-dir={}/.git --work-tree=$PWD/{} pull origin master -r \;'

