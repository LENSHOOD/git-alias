# g for git, so every other command that is not contained in alias can also be simplified
alias g='git'

alias ga='git add'
alias ga.='git add .'

alias gb='git branch'

# gcm and gca is very useful
alias gc='git comiit'
alias gcm='git commit -m'
alias gca='git commit --amend'

alias gck='git checkout'

# add branch name after this alias
alias gfo='git fetch origin'
alias gplo='git pull origin'
alias gpso='git push origin'

alias gl='git log'

alias gm='git merge'

# always run gpr before push local commits
alias gp='git pull'
alias gpr='git pull -r'

alias gs='git status'

alias gd='git diff'

alias gr='git reset'

alias gcl='git clone'

